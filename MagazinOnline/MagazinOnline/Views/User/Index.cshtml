@using MagazinOnline.Models.Entities
@model List<CartItem>

@inject IHttpContextAccessor HttpContextAccessor

<h2>Your Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <h4>Total: @Model.Sum(item => item.Price).ToString("C")</h4>
</div>

<div>
    <a class="btn btn-primary" href="/User/PaymentWithPayPal"> Pay Now</a>
</div>
